
shader(terrain){

        terrain(){
        }
        virtual ~terrain() {}

	shade(){
	
	    float u = (position[0]+1000)/2000.0;
	    float v = (position[2]+1000)/2000.0;
	    Color A(1,0,0);
	    Color B(0,1,0);
	    Color X(0,0,1);
	    Color Y(1,1,0);
	    color = ( (A*u+B*(1-u))*v + (X*u+Y*(1-u))*(1-v) ) * 2.5;
	}
};
publish(terrain);
default(terrain);

